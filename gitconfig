[core]
    editor = nvim
    excludesfile = ~/.gitignore
    whitespace = trailing-space

[user]
    name = George Hickman
    email = george@ghickman.co.uk
    signingkey = "093B01FD"

[alias]
    ap = add -p
    bd = branch -d
    c = commit
    cav = commit -av
    cb = checkout -b
    changes = "!git lg main.."
    ctags = "!.git/hooks/ctags"
    cv = commit -v
    d = diff
    dc = diff --cached
    dsf = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd "$GIT_PREFIX"; git diff --color $@ | diff-so-fancy | less --tabs=4 -RFX; }; f"
    fixup = commit --amend -C head
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    logo = log --oneline
    prune = remote prune origin
    rc = rebase --continue
    s = status
    sb = checkout -
    select = "!git recent-branches | fzf | xargs git checkout"
    sm = switch main
    whatadded = "log --diff-filter=A"

    swtich = switch  # ffs

    git = status  # damn you muscle memory

[apply]
    whitespace = warn

[branch]
    autosetuprebase = always

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green

[color "status"]
    untracked = cyan

[color "diff-highlight"]
    newHighlight = "green bold 22"
    newNormal = "green bold"
    oldHighlight = "red bold 52"
    oldNormal = "red bold"

[commit]
    gpgsign = true

[diff]
    algorithm = patience
    indentHeuristic = true
    noprefix = true
    wsErrorHighlight = all

[fetch]
    prune = true
    writeCommitGraph = true

[gpg]
    program = gpg

[help]
    autocorrect = 1

[include]
    path = .heroku/accounts/config

[init]
    defaultBranch = main
    templatedir = ~/.git_template

[interactive]
    singleKey = true

[merge]
    tool = splice

[mergetool "splice"]
    cmd = "$EDITOR -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[pull]
    rebase = true

[push]
    autoSetupRemote = true
    default = current
    followTags = true

[rebase]
    autostash = true

[rerere]
    enabled = 1

[stash]
    showPatch = true

[status]
    relativePaths = true
    showUntrackedFiles = all

[transfer]
    fsckobjects = true

