[core]
    editor = /usr/local/bin/nvim
    excludesfile = ~/.gitignore
    whitespace = trailing-space

[user]
    name = George Hickman
    email = george@ghickman.co.uk
    signingkey = "093B01FD"

[alias]
    ap = add -p
    c = commit
    cv = commit -v
    cav = commit -av
    d = diff
    dc = diff --cached
    s = status
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    logo = log --oneline
    ctags = "!.git/hooks/ctags"
    prune = remote prune origin
    select = "!git recent-branches | selecta | xargs git checkout"
    push-start = "!git push --set-upstream origin `git rev-parse --abbrev-ref HEAD`"
    fixup = commit --amend -C head
    cb = checkout -b
    sb = checkout -
    start-pr = "!git push-start && hub browse"

    git = status  # damn you muscle memory

[apply]
    whitespace = warn

[branch]
    autosetuprebase = always

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green

[color "status"]
    untracked = cyan

[commit]
    gpgsign = true

[diff]
    algorithm = patience

[help]
    autocorrect = 1

[include]
    path = .heroku/accounts/config
    path = .ghi

[init]
    templatedir = ~/.git_template

[merge]
    tool = splice

[mergetool "splice"]
    cmd = "$EDITOR -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[push]
    default = upstream

[rerere]
    enabled = 1

[status]
    relativePaths = true

# third party
[achievement]
  upload = true

[gist]
    private = yes

