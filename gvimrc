" Colour scheme
colorscheme vwilight

if has("gui_macvim")
  " Fullscreen takes up entire screen
  set fuoptions=maxhorz,maxvert
endif

" Start without the toolbar
set guioptions-=T

" Get rid of all scrollbars
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
set guioptions-=b

set guifont=Monaco:h12
set vb

