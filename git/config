[core]
    editor = nvim
    pager = delta
    whitespace = trailing-space

[user]
    name = George Hickman
    email = george@ghickman.co.uk
    signingkey = ssh-rsa 

[advice]
    statusHints = false

[alias]
    ap = add -p
    bd = branch -d
    c = commit
    cav = commit -av
    cb = checkout -b
    changes = lg main..
    ctags = "!.git/hooks/ctags"
    cv = commit -v
    d = diff
    dc = diff --cached
    dsf = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd "$GIT_PREFIX"; git diff --color $@ | diff-so-fancy | less --tabs=4 -RFX; }; f"
    fm = fetch origin main:main
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    logo = log --oneline
    prune = remote prune origin
    rc = rebase --continue
    s = status
    sb = checkout -
    select = "!git recent-branches | fzf | xargs git checkout"
    sm = switch main
    whatadded = "log --diff-filter=A"
    add-unmerged = "!git diff --name-only --diff-filter U | xargs -r git add"
    edit-unmerged = "!git diff --name-only --diff-filter U | xargs -r $(git var GIT_EDITOR)"

    swtich = switch  # ffs

    git = status  # damn you muscle memory

[apply]
    whitespace = warn

[branch]
    autosetuprebase = always

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green

[color "status"]
    untracked = cyan

[color "diff-highlight"]
    newHighlight = "green bold 22"
    newNormal = "green bold"
    oldHighlight = "red bold 52"
    oldNormal = "red bold"

[commit]
    gpgsign = true
    verbose = true

[diff]
    algorithm = patience
    colorMoved = default
    indentHeuristic = true
    noprefix = true
    wsErrorHighlight = all

[fetch]
    prune = true
    writeCommitGraph = true

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[help]
    autoCorrect = immediate

[init]
    defaultBranch = main
    templatedir = ~/.config/git/template

[interactive]
    diffFilter = delta --color-only
    singleKey = true

[merge]
    tool = splice

[mergetool "splice"]
    cmd = "$EDITOR -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[pull]
    rebase = true

[push]
    autoSetupRemote = true
    default = current
    followTags = true

[rebase]
    autostash = true
    updateRefs = true

[rerere]
    enabled = 1

[stash]
    showPatch = true

[status]
    relativePaths = true
    showUntrackedFiles = all

[transfer]
    fsckobjects = true

# third party
[delta]
    features = my-theme
    light = false
    line-numbers = true
    navigate = true

[delta "my-theme"]
    syntax-theme = Dracula
    line-numbers-minus-style = red bold
    line-numbers-plus-style = green
    minus-style = red bold
    plus-style = green

[gist]
    private = yes

[github]
    user = ghickman

[tig]
    line-graphics = utf-8
