[core]
  editor = /usr/local/Cellar/macvim/v7.3-53/MacVim.app/Contents/MacOS/Vim
  excludesfile = /Users/george/.gitignore
  whitespace = trailing-space

[user]
  name = George Hickman
  email = george@ghickman.co.uk

[alias]
  c = commit
  d = diff
  dc = diff --cached
  ld = log ORIG_HEAD.. --stat --no-merges
  mnff = merge --no-ff
  s = status

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow

[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  tool = threesome

[mergetool "threesome"]
  cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
  trustExitCode = true

[push]
    default = current
[status]
  relativePaths = true

