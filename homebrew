# Taps
brew tap nvie/autoenv
brew tap phinze/homebrew-cask
brew install brew-cask

# Basics
brew install nvie-autoenv bash-completion cowsay gnu-typist mobile-shell mtr nmap s3cmd watch wget

# Git
brew install git git-extras hub

# Vim
brew install ctags macvim v8

# Search
brew install ack the_silver_searcher

# Mutt
brew install contacts msmtp mutt --sidebar-patch notmuch offline-imap sqlite urlview

# Dev
brew install libmemcached markdown memcached redis solr

# Python
brew install python python3 pypy
