#!/usr/bin/env python3

import calendar
import os
import sys


BASE = sys.argv[1] if len(sys.argv) > 1 else '.'


for i, month in enumerate(calendar.month_name):
    if not month:
        continue

    path = os.path.join(BASE, '{:02d} - {}'.format(i, month))

    try:
        os.mkdir(path)
    except OSError:
        print('Path already exists: {}'.format(path))
