[ui]
username = George Hickman <george@incuna.com>
editor = vim
ignore = /Users/george/.hgignore

[extensions]
color =
convert =
fetch =
pager =
parentrevspec =
progress =
purge =
rebase =
record =
transplant =

# pales into significance of git's squash
#attic = /Users/george/Sources/hgattic/attic.py
collapse = /Users/george/Sources/hgcollapse/hgext/collapse.py
hgsubversion = /Users/george/Sources/hgsubversion/hgsubversion
prompt = /Users/george/Sources/hg-prompt/prompt.py
shelve = /Users/george/Sources/hgshelve/hgshelve.py

[alias]
lb = log -b .
nudge = push --rev .
p = record
show = log --patch --git --rev
s = !hg status $($HG root) $HG_ARGS

[color]
status.added = blue
status.deleted = cyan
status.modified = green
status.removed = red
status.unknown = magenta

[merge-tools]
sourcetreemerge.gui=False
sourcetreebulkmerge.gui=False
sourcetreemerge.binary=False
sourcetreebulkmerge.executable=/Applications/SourceTree.app/Contents/Resources/hg-merge.sh
sourcetreemerge.args=$local $other -ancestor $base -merge $output
sourcetreemerge.checkconflicts=True
sourcetreemerge.premerge=True
sourcetreemerge.executable=/Applications/SourceTree.app/Contents/Resources/opendiff-w.sh
sourcetreebulkmerge.premerge=False
sourcetreebulkmerge.binary=True

[extdiff]
cmd.sourcetreediff=opendiff
opts.sourcetreediff=

[pager]
pager = LESS='FSRX' less
